<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="332dp"
        android:layout_marginTop="56dp"
        android:onClick="onAdd"
        android:text="add on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="test"
        android:text="@string/sign_out"
        app:layout_constraintEnd_toStartOf="@+id/add_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_on" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/add_on"
        tools:layout_editor_absoluteX="0dp">

    </ListView>

    <Button
        android:id="@+id/bloods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="@string/_1"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="373dp"
        app:layout_constraintBottom_toBottomOf="@id/listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/onw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="373dp"
        app:layout_constraintBottom_toBottomOf="@id/bloods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/son"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="373dp"
        app:layout_constraintBottom_toBottomOf="@id/onw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>